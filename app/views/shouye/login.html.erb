<%= content_for :title, "登录页面" %>
<div class="content">
	<div class="ui form segment center">
<%= form_tag '/login/',id: 'login_form', remote: true do  %>

<div class="field">
<label>用户名</label>
<div class="ui left labeled icon input">
<%= text_field_tag "username", nil, placeholder: "用户名"%>
<i class="user icon"></i>
<div class="ui corner label">
<i class="icon asterisk"></i>
</div>
</div>
</div>
<div class="field">
<label>密码</label>
<div class="ui left labeled icon input">
<%= password_field_tag "password" %>
<i class="lock icon"></i>
<div class="ui corner label">
<i class="icon asterisk"></i>
</div>
</div>
</div>
<div id="login_error_msg" class="ui error message">
<div class="header">用户名或密码错误</div>
</div>
<%= submit_tag "登录", class: "ui blue submit button" %>
</div>
<% end %>
</div>
<script type="text/javascript">
	$("#login_form").on("ajax:success", function(e, data, status, xhr){
		if(JSON.parse(xhr.responseText)["success"] == false){
			$("#login_error_msg").show();
			$("#password").val('');
			$("#password").focus();
		}
		else
		{
			window.location.href = "/write/";
		}
	});
</script>